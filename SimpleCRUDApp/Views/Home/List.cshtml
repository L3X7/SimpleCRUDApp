@model IEnumerable<SimpleCRUDApp.Models.Users>
<table class="table table-striped table-bordered table-hover" id="datatable-user">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <button class="btn btn-warning btn-xs" onclick="UpdateU(@item.IdUser)">Update</button> |
                    <button class="btn btn-primary btn-xs" onclick="DetailU(@item.IdUser)">Detail</button> |
                    <button class="btn btn-danger btn-xs" onclick="DeleteU(@item.IdUser)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>